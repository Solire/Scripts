[user]
    name = <username>
    email = <email>
    editor = vim
    
[diff]
    tool = vimdiff
    
[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto
    ui = true
    pager = true
    
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
    
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
    
[alias]
    st = status
    ci = commit
    br = branch
    df = diff
    lg = log -p
    co = checkout
    tree = log --graph --pretty=oneline --decorate
    pom = push origin master
    amend = commit --amend -C HEAD
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
    
[core]
    pager = less -FRSX
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore_global
    
[apply]
    whitespace = fix

[credential]
    helper = cache --timeout=3600

